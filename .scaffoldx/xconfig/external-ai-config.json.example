{
  "description": "Configuration for external AI services",
  "version": "1.0.0",
  "providers": {
    "openai": {
      "enabled": false,
      "api_key_env": "OPENAI_API_KEY",
      "model": "gpt-4",
      "max_tokens": 4096,
      "temperature": 0.7
    },
    "anthropic": {
      "enabled": false,
      "api_key_env": "ANTHROPIC_API_KEY",
      "model": "claude-3-opus",
      "max_tokens": 4096,
      "temperature": 0.7
    },
    "local": {
      "enabled": false,
      "endpoint": "http://localhost:11434",
      "model": "llama2",
      "max_tokens": 2048
    }
  },
  "default_provider": "openai",
  "fallback_providers": ["anthropic", "local"],
  "retry": {
    "max_attempts": 3,
    "delay_ms": 1000,
    "backoff_multiplier": 2
  },
  "usage_tracking": {
    "enabled": true,
    "log_path": ".scaffoldx/xlogs/ai-usage.json"
  }
}
